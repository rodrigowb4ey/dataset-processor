{
  "info": {
    "_postman_id": "9e5c4f2b-3bb2-4ed1-8db9-4a6a7b3cb8b0",
    "name": "Dataset Processor",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{base_url}}/"
      }
    },
    {
      "name": "Datasets",
      "item": [
        {
          "name": "Upload dataset",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"status is 201\", function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "var payload = pm.response.json();",
                  "if (payload && payload.id) {",
                  "  pm.collectionVariables.set(\"dataset_id\", payload.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "type": "text",
                  "value": "January sales"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": "{{base_url}}/datasets"
          }
        },
        {
          "name": "Get dataset",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/datasets/{{dataset_id}}"
          }
        },
        {
          "name": "Enqueue processing",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"status is 202\", function () {",
                  "  pm.response.to.have.status(202);",
                  "});",
                  "",
                  "var payload = pm.response.json();",
                  "if (payload && payload.job_id) {",
                  "  pm.collectionVariables.set(\"job_id\", payload.job_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{base_url}}/datasets/{{dataset_id}}/process"
          }
        },
        {
          "name": "Get report",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/datasets/{{dataset_id}}/report"
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "List jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/jobs"
          }
        },
        {
          "name": "Get job",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/jobs/{{job_id}}"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "dataset_id",
      "value": ""
    },
    {
      "key": "job_id",
      "value": ""
    }
  ]
}
